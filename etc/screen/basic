# See:
# * http://www.calmar.ws/dotfiles/screenrc.html
# * http://aperiodic.net/screen/appearance

startup_message off
vbell off
defscrollback 5000
backtick 1 60 60 sh -c 'screen -ls | grep --color=no -o "$PPID[^[:space:]]*" | awk -F "." "{print \$2}"'

caption always "%{b Wk}[%1`]%{= kw} %?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r}) %{g}"

