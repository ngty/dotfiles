create_symlink() {
  local src=$1
  local dest=$2

  echo -n "* creating symlink: $dest ~> $src ... "
  rm -f $dest ; ln -s $src $dest
  echo "done"
}

machine_os() {
  if [ -n "`uname -a | grep -i ubuntu`" ]; then
    echo 'ubuntu'
  elif [ -n "`uname -a | grep -i arch`" ]; then
    echo 'archlinux'
  else
    echo 'wtf'
  fi
}
