alias gst="git status"
alias gco="git checkout"
alias gad="git add"
alias glg="git log"
alias gdf="git diff"
alias gbr="git branch"
alias gcm="git commit"
alias grm="git rm"
alias gph="git push"
alias gmv="git mv"
alias gfe="git fetch"
