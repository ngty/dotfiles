alias ls='ls -G'
alias nv='nvim'
alias vi='nvim'
alias bx="bundle exec"
alias alsamixer='amixer sset Master unmute; /usr/bin/alsamixer'

# MacOS specific
alias brw="brew"
alias brc="brew cask"

# Interop with pbcopy & pbpaste
alias pbcopy="reattach-to-user-namespace /usr/bin/pbcopy"
alias pbpaste="reattach-to-user-namespace /usr/bin/pbpaste"

