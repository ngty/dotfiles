alias ls='ls --color=auto'
alias grep='grep --color'

alias gbr='git branch'
alias gad='git add'
alias gst='git status'
alias glg='git log'
alias grb='git rebase'
alias gfe='git fetch'
alias gco='git checkout'
alias gcm='git commit'
alias grm='git rm'
alias gmv='git mv'
alias gpk='git cherry-pick'
alias gsh='git stash'
alias gdf='git diff'
alias gph='git push'
alias gui='gitg'

# Sudo specific
alias s-up-wifi=$HOME/bin/s/turn-on-wifi
alias s-down-wifi=$HOME/bin/s/turn-off-wifi
alias s-fix-wifi='s-down-wifi; s-up-wifi'
alias s-pacman='sudo pacman'
alias s-rc.d='sudo rc.d'

