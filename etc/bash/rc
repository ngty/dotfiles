# Sudo tweaks, see https://wiki.archlinux.org/index.php/Sudo
complete -cf sudo     # enable sudo tab completion
alias sudo="sudo -E " # pass env variables to root

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Keep things organized
source $HOME/etc/bash/exports
source $HOME/etc/bash/aliases

# __END__
