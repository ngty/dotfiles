# Sudo tweaks, see https://wiki.archlinux.org/index.php/Sudo
complete -cf sudo     # enable sudo tab completion
alias sudo="sudo -E " # pass env variables to root

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

[[ -f `dirname $0`/exports ]] && source `dirname $0`/exports
[[ -f `dirname $0`/aliases ]] && source `dirname $0`/aliases

# __END__
